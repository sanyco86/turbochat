<%= turbo_stream_from :rooms %>

<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <% if user_signed_in? %>
      <%= form_with model: @new_room do |f| %>
        <%= f.submit "New Room", class: "group relative flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 cursor-pointer" %>
      <% end %>

      <%= turbo_frame_tag :rooms do %>
        <%= render @rooms %>
      <% end %>
    <%end %>
  </div>
</div>
